<div class="container">
	<div class="row">
		<div class="col-md-9 col-md-offset-3">
			<h1>Evaluation</h1>
		</div>
	</div>
	<div class="row">
		<ul class="col-md-3 nav">
			<li class="nav-item">{{#link-to "evaluation" class="nav-link"}}Events{{/link-to}}</li>
			<li class="nav-item">{{#link-to "evaluation.statistics" class="nav-link"}}Statistics{{/link-to}}</li>
			{{#if (can "create iuf.junia/event")}}
			<li class="nav-item">{{#link-to "evaluation.new" class="nav-link"}}New event{{/link-to}}</li>
			{{/if}}
		</ul>
		<div class="col-md-9">
			{{#each model as |event|}}
			  <p>
				  {{#link-to "evaluation.event" event.slug}}{{event.name}}{{/link-to}}<br>
				  Start: <span class="text-muted">{{moment-calendar event.start}}</span>
				  End: <span class="text-muted">{{moment-calendar event.end}}</span>
			  </p>
			{{/each}}
		</div>
	</div>
</div>
